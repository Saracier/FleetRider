<div class="container mt-5">
  <%== pagy_nav @pagy %>
  <table class="table">
    <thead>
    <tr>
      <th>Brand</th>
      <th>Model</th>
      <th>Picture</th>
      <th>Run</th>
      <th>Fuel Consumption</th>
      <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.brand %></td>
        <td><%= car.model %></td>
        <td><%= car.picture %></td>
        <td><%= car.run %></td>
        <td><%= car.fuel_consumption %></td>
        <td>
          <%= link_to 'Edit', edit_car_path(car.id), class: 'btn btn-primary btn-sm' %>
          <%= link_to 'Delete', car_path(car.id), data: { turbo_confirm: 'Are you sure?', turbo_method: :delete}, class: 'btn btn-danger btn-sm' %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <%= link_to 'Add Car', new_car_path, class: 'btn btn-info btn-sm' %>
</div>
