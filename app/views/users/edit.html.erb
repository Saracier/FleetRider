<%= form_for @user, html: { class: "form-horizontal container mt-5" }, data: { turbo_frame: :_top } do |form|%>

  <%= turbo_frame_tag "users_feedback" do %>
    <%= render "users_feedback" %>
  <% end %>

  <div class="form-group">
    <%= form.label :email, class: "control-label" %>
    <%= form.email_field :email, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :password, class: "control-label" %>
    <%= form.password_field :password, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :first_name, class: "control-label" %>
    <%= form.text_field :first_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :last_name, class: "control-label" %>
    <%= form.text_field :last_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :role, class: "control-label" %>
    <%= form.select :role, User.roles.keys.map { |role| [role.humanize, role] }, {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>
<%= link_to 'Back', users_path, class: "btn btn-primary mt-3 m-2" %>
