<%= form_for @trip, html: { class: "form-horizontal container mt-5" }, data: { turbo_frame: :_top } do |form|%>

  <div class="form-group">
    <%= form.label :car_id, class: "control-label" %>
    <%= form.select :car_id, Car.all.map { |car| [car.brand + ' ' + car.model, car.id] }, {}, { class: "form-control" } %>
  </div>

  <div class="form-group">
    <%= form.label :from, class: "control-label" %>
    <%= form.text_field :from, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :to, class: "control-label" %>
    <%= form.text_field :to, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :pitstop, class: "control-label" %>
    <%= form.text_field :pitstop, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :distance, class: "control-label" %>
    <%= form.number_field :distance, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :date_beginning, class: "control-label" %>
    <%= form.date_select :date_beginning, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :date_end, class: "control-label" %>
    <%= form.date_select :date_end, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :user_id, "Traveller", class: "control-label" %>
    <%= form.select :user_id, User.all.map { |user| ["#{user.first_name} #{user.last_name}", user.id] }, { class: "form-control" } %>

  </div>

  <div class="form-group">
    <%= form.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>
<%= link_to 'Back', trips_path, class: "btn btn-primary mt-3 m-2" %>
